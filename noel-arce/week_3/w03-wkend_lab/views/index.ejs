<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>Micro-Blog</title>

    <!-- STYLESHEETS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/styles.css">

    <!-- VENDOR SCRIPTS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <!-- APPLICATION SCRIPTS -->
    <script src="js/app.js"></script>
  </head>

  <body>

  <div class='jumbotron'>
    <div class="container"></div>
  </div>
  <div class='container'>
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <form id='new-post-form'>
          <div class="input-group">
            <input type="text" class="form-control" id='new-blog' name='content' placeholder="Blog Away!...">
            <span class="input-group-btn">
              <button type="submit" class="btn btn-default" id='post'>Post</button>
            </span>
          </div>
          <hr>
        </form>
        <div>
          <p><span id="today"></span> | <span class="badge" id='post-number' data-toggle="tooltip" data-placement="right" title="Blog Count"></span>
          </p>
        </div>
        <div>
          <ul class='blogs list-group' id='blog-posts'>
            <% posts.forEach(function(post) { %>
              <li class="list-group-item" data-id='<%= post._id %>'><%= post.body %><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <footer>
    <p>Noel Arcellana | <span><a href="mailto:n.arcellana.00@gmail.com">email: n.arcellana.00@gmail.com</a></span></p>
  </footer>
  </body>
</html>