<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1>Creature Gallery</h1>
			</br>
		</div>
				<% @creatures.each do |c| %>
		    <div class= "col-lg-3 col-md-4 col-xs-6">
		    	<a href="/creatures/<%= c.id %>"  class="thumbnail">
		    		<img class="img-responsive" src="http://placehold.it/400x300">
		    	</a>
			    	<div class="caption">
			        <h3>Brand: <%= c.name %> <br></h3>
			        <p>Description: <%=  c.description %></p> 
			       
			        <%= button_to "Delete", c, method: :delete %>
			      </div>
		    </div>
				<% end %>

	</div>
</div>