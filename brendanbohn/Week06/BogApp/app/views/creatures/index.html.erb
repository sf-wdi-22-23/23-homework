
<div id="creatures" class="transition-enabled">

	<% @creatures.each do |c| %>

		<div class="box panel panel-default">
			<%= link_to (image_tag c.image.url), c %>
			<div class="panel-body">
			<h2> <%= link_to c.name, c %></h2>
				<p> <%= c.desc %> </p>
				<p class="user"> Submitted by <%= c.user.email %> </p>
			</div>
		</div>
	<% end %>
</div>