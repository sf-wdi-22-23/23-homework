
<div class="container">
	<div class="row">
		<div class="col-sm-4 col-sm-offset-8 text-center white">
		
			<h1><strong>Creatures</strong></h1>
			
			<h3>Love learning about new and strange creatures? Browse below or add a new one to our collection <%= link_to "here", new_creature_path%></h3>
		</div>
	</div>
</div>

<div class="container all-creatures">
	<div class="row">
		<% @creatures.each do |creature| %>
  
  		<div class="col-sm-4">
	    	<div class="thumbnail">
				  <img src="<%=creature.image%>" alt="...">
	      		<div class="caption">
				        <h2 class="text-center"><%= creature.name %> </h2>
				        <p><%=  creature.description %></p> 
				        <p><%= button_to "View", creature_path(:id => creature.id), class:"btn btn-default", method: :get %> <%= button_to "Delete", creature, class:"btn btn-default", method: :delete %></p>
				    </div>
	    	</div>
	 		</div>
		<% end %>
	</div>
</div>
